<!DOCTYPE html>
<html>
  <head>
    <title>Daniel Cheley</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="assets/materialize.css"  media="screen,projection"/>
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col s12 m9 l10">
          <%= yield %>
        </div>

        <div class="col hide-on-small-only m3 l2">
          <ul class="section table-of-contents right">
            <li><a href="#intro" class="">Intro</a></li>
            <li><a href="#skills" class="">Skills</a></li>
            <li><a href="#play" class="">Play</a></li>
            <li><a href="#projects" class="">Projects</a></li>
            <li><a href="#about" class="">About Me</a></li>
            <li><a href="#contact" class="">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/assets/materialize.js"></script>
  </body>
</html>
