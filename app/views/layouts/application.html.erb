<!DOCTYPE html>
<html>
  <%= favicon_link_tag 'icon-logo.ico'%>
  <head>
    <title>Daniel Cheley</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.min.css-->
    <%= stylesheet_link_tag 'materialize.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <% if Rails.env.production? %>
      <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-96964221-2', 'auto');
      </script>
    <% end %>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo center" style="background-color: black; margin-top: 5px;"><%= image_tag('icon-logo.png') %></a>
        <ul id="nav-mobile" class="left hide-on-small-and-down" style="margin-left: 12%;">
          <a href="/" class="waves-effect waves-black">INTRO</a>
          <a href="/pages/skills" class="waves-effect waves-black">SKILLS</a>
        </ul>
        <ul id="nav-mobile" class="right hide-on-small-and-down" style="margin-right: 12%;">
          <a href="/pages/projects" class="waves-effect waves-black">PROJECTS</a>
          <a href="/pages/about" class="waves-effect waves-black">ABOUT</a>
        </ul>
      </div>
    </nav>

    <ul id="slide-out" class="side-nav">
      <a href="/" class="brand-nav-logo" style="background-color: black;"><%= image_tag('icon-logo.png') %></a>
      <ul class="nav-links">
        <a href="/" class="waves-effect waves-black">INTRO</a>
        <a href="/pages/skills" class="waves-effect waves-black"><i class="material-icons left" style="margin: auto; padding-top: 10px;">code</i>SKILLS</a>
        <a href="/pages/projects" class="waves-effect waves-black"><i class="material-icons left" style="margin: auto; padding-top: 10px;">view_carousel</i>PROJECTS</a>
        <a href="/pages/about" class="waves-effect waves-black"><i class="material-icons left" style="margin: auto; padding-top: 10px;">perm_identity</i>ABOUT</a>
      </ul>
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse hide-on-med-and-up"><i class="material-icons" id="side-nav-button">menu</i></a>

    <%= yield %>

    <!--Import jQuery before materialize.min.js-->
    <!-- <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script> -->
    <%= javascript_include_tag 'materialize.min', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
