<!DOCTYPE html>
<html>
  <%= favicon_link_tag 'icon-logo.ico'%>
  <head>
    <title>Daniel Cheley</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.min.css-->
    <%= stylesheet_link_tag 'materialize.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <%= yield %>

    <ul id="nav-mobile" class="side-nav fixed hide-on-small-and-down" style="transform: translateX(0%);">
      <a href="/" class="brand-logo" style="background-color: black;"><%= image_tag('icon-logo.png') %></a>
        <ul class="collapsible collapsible-accordion">
          <li class="bold"><a class="collapsible-header active waves-effect waves-red">CONTENT</a>
            <div class="collapsible-body">
              <ul class="nav-links">
                <li><a href="/" class="waves-effect waves-black">INTRO</a></li>
                <li><a href="/pages/skills" class="waves-effect waves-black"><i class="material-icons left" style="margin: 0;">code</i>SKILLS</a></li>
                <li><a href="/pages/projects" class="waves-effect waves-black"><i class="material-icons left" style="margin: 0;">view_carousel</i>PROJECTS</a></li>
                <li><a href="/pages/about" class="waves-effect waves-black"><i class="material-icons left" style="margin: 0;">perm_identity</i>ABOUT</a></li>
                <li><a href="/pages/contact" class="waves-effect waves-black"><i class="material-icons left" style="margin: 0;">email</i>CONTACT</a></li>
              </ul>
            </div>
          </li>
        </ul>
    </ul>

    <!--Import jQuery before materialize.min.js-->
    <!-- <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script> -->
    <%= javascript_include_tag 'materialize.min', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
