<h4 style="margin-top: 40px;">Interested in working with me?</h4>

<!-- Modal Trigger -->

<a href="#modal1" class="waves-effect waves-light btn modal-trigger">
  <i class="material-icons" id="intro-button">email</i>
</a>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
   <%= form_for(@contact) do |f| %>
    <% if @contact.errors.any? %>
      <h2 class="error-header"><%= pluralize(@contact.errors.count, "error") %> occurred!</h2>

      <ul class="error-list">
        <% @contact.errors.full_messages.each do |msg| %>
          <li class="error-msg"><%= msg %></li>
        <% end %>
      </ul>

    <% end %>

    <div class="field">
      <%= f.label :name, class:"field-label" %>
      <%= f.text_field :name, class:"field-input" %>
    </div>

    <div class="field">
      <%= f.label :organization, class:"field-label" %>
      <%= f.text_field :organization, class:"field-input" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"field-label" %>
      <%= f.text_field :email, class:"field-input" %>
    </div>

    <div class="field">
      <%= f.label :phone, class:"field-label" %>
      <%= f.text_field :phone, class:"field-input" %>
    </div>

    <div class="field">
      <%= f.label :message, class:"field-label" %>
      <%= f.text_area :message, class:"field-input", placeholder:"Enter your message here." %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "SUBMIT", class:"modal-action modal-close waves-effect waves-red btn-flat" %>
  <% end %>
  </div>
</div>
